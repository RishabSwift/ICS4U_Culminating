<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="1000" prefWidth="1080" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="culminating.MainStageController">
    <children>
      <ImageView fitHeight="808.0" fx:id="backgroundImage" fitWidth="1077.0" pickOnBounds="true">
         <image>
            <Image url="@../images/homescreenWallpaper.jpg" />
         </image>
      </ImageView>

        <Button fx:id="buttonNewGame" alignment="BOTTOM_CENTER" contentDisplay="GRAPHIC_ONLY" layoutX="389.0" layoutY="264.0" mnemonicParsing="false" onAction="#startGameAction" prefHeight="46.0" prefWidth="153.0" style="-fx-background-color: transparent;" text="Button">
            <graphic>
                <ImageView fitHeight="52.0" fitWidth="257.0">
                    <image>
                        <Image url="@../images/buttons/button_NewGame.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="buttonLoadGame" alignment="BOTTOM_CENTER" contentDisplay="GRAPHIC_ONLY" layoutX="389.0" layoutY="363.0" mnemonicParsing="false" prefHeight="46.0" prefWidth="153.0" style="-fx-background-color: transparent;" text="Button">
            <graphic>
                <ImageView fitHeight="52.0" fitWidth="257.0">
                    <image>
                        <Image url="@../images/buttons/button_LoadGame.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="buttonExitGame" alignment="BOTTOM_CENTER" contentDisplay="GRAPHIC_ONLY" layoutX="389.0" layoutY="463.0" mnemonicParsing="false" onAction="#exitGameAction" prefHeight="46.0" prefWidth="153.0" style="-fx-background-color: transparent;" text="Button">
            <graphic>
                <ImageView fitHeight="52.0" fitWidth="257.0">
                    <image>
                        <Image url="@../images/buttons/button_ExitGame.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>

    </children>
</AnchorPane>
