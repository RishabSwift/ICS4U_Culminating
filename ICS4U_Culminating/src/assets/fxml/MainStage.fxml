<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>

<AnchorPane fx:id="anchorPane" prefHeight="1000" prefWidth="1080" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="culminating.MainStageController">
    <children>
      <StackPane prefHeight="300.0" prefWidth="300.0" AnchorPane.topAnchor="0.0">
         <children>
            <ImageView fx:id="backgroundImage" fitHeight="808.0" fitWidth="1077.0" pickOnBounds="true">
               <image>
                  <Image url="@../images/homescreenWallpaper.jpg" />
               </image>
            </ImageView>
      
              <Button fx:id="buttonNewGame" alignment="BOTTOM_CENTER" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#startGameAction" prefHeight="46.0" prefWidth="153.0" style="-fx-background-color: transparent;" text="Button" StackPane.alignment="CENTER">
                  <graphic>
                      <ImageView fitHeight="52.0" fitWidth="257.0">
                          <image>
                              <Image url="@../images/buttons/button_NewGame.png" />
                          </image>
                      </ImageView>
                  </graphic>
               <StackPane.margin>
                  <Insets bottom="100.0" />
               </StackPane.margin>
              </Button>
             
              <Button fx:id="buttonExitGame" alignment="TOP_CENTER" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#exitGameAction" prefHeight="46.0" prefWidth="153.0" style="-fx-background-color: transparent;" text="Button">
                  <graphic>
                      <ImageView fitHeight="52.0" fitWidth="257.0">
                          <image>
                              <Image url="@../images/buttons/button_ExitGame.png" />
                          </image>
                      </ImageView>
                  </graphic>
               <StackPane.margin>
                  <Insets top="100.0" />
               </StackPane.margin>
              </Button>
         </children>
      </StackPane>

    </children>
</AnchorPane>
